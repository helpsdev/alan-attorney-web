@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@Model.Value("metaTitle")</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <div class="navigation">
      <a href="/">
          <img src="/images/blancologocropped.png" alt="Logo" class="navigation_logo">
      </a>
      <div>
          <div class="navigation_contact">
              <p class="navigation_contact-text">
                  <span>Tel: (614) 123 4567</span>
                  <span>|</span>
                  <span>E-mail: contacto@aragonyasociados</span>
              </p>
          </div>
          <nav class="navigation_elements">
            <ul class="navigation_elements-list">
              <li class="navigation_element">
                La firma
              </li>
              <li class="navigation_element">
                Servicios
              </li>
              <li class="navigation_element">
                Empleo
              </li>
              <li class="navigation_element">
                Contacto
              </li>
            </ul>
          </nav>
      </div>
  </div>
  <main class="main-content">
    <h1 class="title">@Model.Value("contentTitle")</h1>
    <h2 class="subtitle">@Model.Value("contentSubtitle")</h2>
    <a href="#" class="button">@Model.Value("contentBook")</a>
  </main>
</body>
</html>